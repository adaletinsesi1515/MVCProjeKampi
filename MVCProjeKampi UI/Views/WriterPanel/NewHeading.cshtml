@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Başlık Ekleme</h1>

<br />
@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group" style="margin-left:10px;">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <div style="color:red">
            @Html.ValidationMessageFor(x => x.HeadingName)
        </div>
        <br />
        @Html.Label("Kategorisi")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlcat, new { @class = "form-control" })


        <br />       

        <button class="btn btn-success">Başlık kaydını sisteme ekle</button>
    </div>
}



